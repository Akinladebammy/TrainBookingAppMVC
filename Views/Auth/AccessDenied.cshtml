
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 large-card text-center">
        <div class="card-body p-5">
            <h1 class="text-danger fw-bold display-4 mb-4">Access Denied</h1>
            <p class="text-secondary fs-3 mb-4">Sorry, you don't have permission to access this page.</p>
            <p class="text-muted fs-5 mb-5">Please check if you're logged in with the correct account or contact an administrator for assistance.</p>
            <div class="d-flex justify-content-center gap-3">
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="@Url.Action("Index", User.IsInRole("Admin") ? "Admin" : "User")" class="btn btn-primary btn-lg custom-btn">Back to Dashboard</a>
                    <a href="@Url.Action("Logout", "Auth")" class="btn btn-outline-danger btn-lg custom-btn">Log Out</a>
                }
                else
                {
                    <a href="@Url.Action("Login", "Auth")" class="btn btn-primary btn-lg custom-btn">Go to Login</a>
                }
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .custom-btn {
            transition: all 0.3s ease;
            border-radius: 5px;
            font-weight: bold;
            padding: 0.75rem 1.5rem;
        }

            .custom-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
                background-color: #0056b3;
            }

        .large-card {
            border-radius: 12px;
            transition: all 0.3s ease;
            min-height: 400px;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        }

            .large-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
            }

        .text-danger {
            color: #dc3545 !important;
        }

        .text-secondary {
            color: #2c3e50 !important;
        }

        .fs-3 {
            font-size: 1.75rem !important;
        }

        .fs-5 {
            font-size: 1.3rem !important;
        }

        .btn-lg {
            font-size: 1.2rem;
            padding: 0.8rem 2rem;
        }
    </style>
}

