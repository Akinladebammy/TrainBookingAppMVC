@model TrainBookingAppMVC.DTOs.RequestModel.UpdateTrainRequestModel

@{
    ViewData["Title"] = "Edit Train";
}

<div class="container mt-5">
    <h2 class="mb-4">Edit Train</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <form asp-action="EditTrain" method="post">
                
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="TrainNumber" class="form-label">Train Number</label>
                    <input asp-for="TrainNumber" class="form-control" maxlength="20" />
                    <span asp-validation-for="TrainNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Train Name</label>
                    <input asp-for="Name" class="form-control" maxlength="100" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EconomicCapacity" class="form-label">Economy Capacity</label>
                    <input asp-for="EconomicCapacity" class="form-control" type="number" min="1" max="1000" />
                    <span asp-validation-for="EconomicCapacity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BusinessCapacity" class="form-label">Business Capacity</label>
                    <input asp-for="BusinessCapacity" class="form-control" type="number" min="1" max="1000" />
                    <span asp-validation-for="BusinessCapacity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FirstClassCapacity" class="form-label">First Class Capacity</label>
                    <input asp-for="FirstClassCapacity" class="form-control" type="number" min="1" max="1000" />
                    <span asp-validation-for="FirstClassCapacity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="4" maxlength="500"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Update Train</button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
