@model TrainBookingAppMVC.DTOs.ResponseModel.TripDto
@using System.Linq
@using System.Globalization

@{
    ViewData["Title"] = "Trip Details";
    var timeZone = TimeZoneInfo.FindSystemTimeZoneById("W. Central Africa Standard Time"); // WAT (UTC+1)
    var nairaCulture = new CultureInfo("ha-NG");
}

<div class="container mt-5">
    <h1 class="mb-5 text-primary fw-bold display-4">Trip Details</h1>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model != null)
    {
        <div class="card shadow-lg border-0 large-card mb-4">
            <div class="card-body p-4">
                <h3 class="card-title text-secondary mb-4 fw-bold fs-2">Trip: @Model.Source to @Model.Destination</h3>
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4 fs-5">Train:</dt>
                            <dd class="col-sm-8 fs-5">@Model.TrainName (@Model.TrainNumber)</dd>
                            <dt class="col-sm-4 fs-5">Source:</dt>
                            <dd class="col-sm-8 fs-5">@Model.Source</dd>
                            <dt class="col-sm-4 fs-5">Destination:</dt>
                            <dd class="col-sm-8 fs-5">@Model.Destination</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4 fs-5">Departure Time (WAT):</dt>
                            <dd class="col-sm-8 fs-5">@TimeZoneInfo.ConvertTimeFromUtc(Model.DepartureTime, timeZone).ToString("g")</dd>
                            <dt class="col-sm-4 fs-5">Status:</dt>
                            <dd class="col-sm-8 fs-5">@(Model.IsExpired ? "Expired" : "Active")</dd>
                        </dl>
                    </div>
                </div>
                <div class="d-flex gap-3 mt-4">
                    <a href="@Url.Action("EditTrip", new { id = Model.Id })" class="btn btn-primary btn-lg custom-btn me-2">Edit Trip</a>
                    <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg custom-btn">Back to Dashboard</a>
                </div>
            </div>
        </div>

        <div class="card shadow-lg border-0 large-card">
            <div class="card-body p-4">
                <h3 class="card-title text-secondary mb-4 fw-bold fs-2">Pricing Details</h3>
                @if (Model.Pricings.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle table-lg">
                            <thead class="table-dark">
                                <tr>
                                    <th>Ticket Class</th>
                                    <th>Price</th>
                                    <th>Total Seats</th>
                                    <th>Available Seats</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var pricing in Model.Pricings)
                                {
                                    <tr>
                                        <td>@pricing.TicketClass</td>
                                        <td>@pricing.Price.ToString("C", nairaCulture)</td>
                                        <td>@pricing.TotalSeats</td>
                                        <td>@pricing.AvailableSeats</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted fs-5">No pricing details available.</p>
                }
            </div>
        </div>
    }
    else
    {
        <p class="text-danger fs-5">Trip not found.</p>
        <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg custom-btn">Back to Dashboard</a>
    }
</div>

@section Styles {
    <style>
        .custom-btn {
            transition: all 0.3s ease;
            border-radius: 5px;
        }
        .custom-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
        .large-card {
            border-radius: 12px;
            transition: all 0.3s ease;
            min-height: 400px;
        }
        .large-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }
        .table-dark { background-color: #343a40; }
        .text-primary { color: #007bff !important; }
        .text-secondary { color: #6c757d !important; }
        .table-lg th, .table-lg td { font-size: 1.1rem; padding: 1rem; }
        .fs-2 { font-size: 2rem !important; }
        .fs-5 { font-size: 1.25rem !important; }
        .btn-lg { font-size: 1.1rem; padding: 0.75rem 1.5rem; }
        dl dt, dl dd { margin-bottom: 1rem; }
    </style>
}
