@using System.Linq
@model dynamic

@{
    ViewData["Title"] = "Admin Dashboard";
    var trains = Model?.Trains as List<TrainBookingAppMVC.DTOs.ResponseModel.TrainResponseModel> ?? new List<TrainBookingAppMVC.DTOs.ResponseModel.TrainResponseModel>();
    var trips = Model?.Trips as List<TrainBookingAppMVC.DTOs.ResponseModel.TripDto> ?? new List<TrainBookingAppMVC.DTOs.ResponseModel.TripDto>();
    var timeZone = TimeZoneInfo.FindSystemTimeZoneById("W. Central Africa Standard Time"); // WAT (UTC+1)
}

<div class="container mt-5">
    <h1 class="mb-5 text-primary fw-bold display-4">Admin Dashboard</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Trains Section -->
    <div class="col-md-12 mb-5">
        <div class="card shadow-lg border-0 large-card">
            <div class="card-body p-4">
                <h3 class="card-title text-secondary mb-4 fw-bold fs-2">Trains</h3>
                <div class="d-flex gap-3 mb-4">
                    <a href="@Url.Action("CreateTrain")" class="btn btn-primary btn-lg custom-btn">Create New Train</a>
                    <a href="@Url.Action("InitializeSampleTrains")" class="btn btn-outline-secondary btn-lg custom-btn">Initialize Sample Trains</a>
                </div>
                @if (trains.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle table-lg">
                            <thead class="table-dark">
                                <tr>
                                    <th>Image</th>
                                    <th>Train Number</th>
                                    <th>Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var train in trains)
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(train.ImagePath))
                                            {
                                                <img src="@train.ImagePath" alt="@train.Name" class="train-image-small" />
                                            }
                                            else
                                            {
                                                <span class="text-muted">No image</span>
                                            }
                                        </td>
                                        <td>@train.TrainNumber</td>
                                        <td>@train.Name</td>
                                        <td>
                                            <a href="@Url.Action("TrainDetails", new { id = train.Id })" class="btn btn-info btn-sm custom-btn me-2">View Details</a>
                                            <a href="@Url.Action("EditTrain", new { id = train.Id })" class="btn btn-primary btn-sm custom-btn me-2">Edit</a>
                                            <form asp-action="DeleteTrain" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this train?');">
                                                <input type="hidden" name="id" value="@train.Id" />
                                                <button type="submit" class="btn btn-danger btn-sm custom-btn">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted fs-5">No trains available.</p>
                }
            </div>
        </div>
    </div>

    <!-- Trips Section -->
    <div class="col-md-12 mb-5">
        <div class="card shadow-lg border-0 large-card">
            <div class="card-body p-4">
                <h3 class="card-title text-secondary mb-4 fw-bold fs-2">Trips</h3>
                <div class="d-flex justify-content-between mb-4">
                    <a href="@Url.Action("CreateTrip")" class="btn btn-primary btn-lg custom-btn">Create New Trip</a>
                </div>
               
                @if (trips.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle table-lg" id="tripsTable">
                            <thead class="table-dark">
                                <tr>
                                    <th>Train</th>
                                    <th>Source</th>
                                    <th>Destination</th>
                                    <th>Departure (WAT)</th>
                                    <th>Ticket Classes</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var trip in trips)
                                {
                                    <tr class="@(trip.IsExpired ? "expired-trip text-muted" : "")">
                                        <td>@trip.TrainName (@trip.TrainNumber)</td>
                                        <td>@trip.Source</td>
                                        <td>@trip.Destination</td>
                                        <td>@TimeZoneInfo.ConvertTimeFromUtc(trip.DepartureTime, timeZone).ToString("g")</td>
                                        <td>@(trip.Pricings.Any() ? string.Join(", ", trip.Pricings.Select(p => p.TicketClass)) : "N/A")</td>
                                        <td>@(trip.IsExpired ? "Expired" : "Active")</td>
                                        <td>
                                            <a href="@Url.Action("TripDetails", new { id = trip.Id })" class="btn btn-info btn-sm custom-btn me-2">View Details</a>
                                            @if (!trip.IsExpired)
                                            {
                                                <a href="@Url.Action("EditTrip", new { id = trip.Id })" class="btn btn-primary btn-sm custom-btn me-2">Edit</a>
                                            }
                                            <form asp-action="DeleteTrip" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this trip?');">
                                                <input type="hidden" name="id" value="@trip.Id" />
                                                <button type="submit" class="btn btn-danger btn-sm custom-btn">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <p class="text-muted mt-3 fs-5">Details: Total Trips: @trips.Count, Expired: @trips.Count(t => t.IsExpired)</p>
                }
                else
                {
                    <p class="text-muted fs-5">No trips available.</p>
                }
            </div>
        </div>
    </div>

    <!-- User Viewing Section -->
    <div class="col-md-12 mb-5">
        <div class="card shadow-lg border-0 large-card">
            <div class="card-body p-4">
                <h3 class="card-title text-secondary mb-4 fw-bold fs-2">View Users</h3>
                <div class="d-flex gap-3 mb-4">
                    <a href="@Url.Action("Users")" class="btn btn-primary btn-lg custom-btn">View All Users</a>
                </div>
                <p class="text-muted fs-5">Access all users and their bookings.</p>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .custom-btn {
            transition: all 0.3s ease;
            border-radius: 5px;
        }

            .custom-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            }

        .large-card {
            border-radius: 12px;
            transition: all 0.3s ease;
            min-height: 400px;
        }

            .large-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            }

        .table-dark {
            background-color: #343a40;
        }

        .expired-trip {
            background-color: #f8f9fa;
            opacity: 0.7;
        }

        .text-primary {
            color: #007bff !important;
        }

        .text-secondary {
            color: #6c757d !important;
        }

        .table-lg th, .table-lg td {
            font-size: 1.1rem;
            padding: 1rem;
        }

        .fs-2 {
            font-size: 2rem !important;
        }

        .fs-5 {
            font-size: 1.25rem !important;
        }

        .btn-lg {
            font-size: 1.1rem;
            padding: 0.75rem 1.5rem;
        }

        .train-image-small {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 5px;
        }
    </style>
}

