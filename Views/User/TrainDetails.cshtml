@model dynamic

@{
    ViewData["Title"] = "Train Details";
    var train = Model.Train as TrainBookingAppMVC.DTOs.ResponseModel.TrainResponseModel;
    var trips = Model.Trips as List<TrainBookingAppMVC.DTOs.ResponseModel.TripDto>;
}

<div class="container mt-5">
    <h1 class="mb-5 text-primary fw-bold display-4">Train Details: @train.Name (@train.TrainNumber)</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (ViewBag.IsAuthenticated)
    {
        <p class="fs-5">Welcome, @ViewBag.FullName!</p>
    }

    <div class="col-md-12 mb-5">
        <div class="card shadow-lg border-0 large-card">
            <div class="card-body p-4">
                @if (train != null)
                {
                    <div class="mb-4">
                        @if (!string.IsNullOrEmpty(train.ImagePath))
                        {
                            <img src="@train.ImagePath" alt="@train.Name" class="img-fluid rounded" style="max-height: 300px; object-fit: cover;" />
                        }
                        else
                        {
                            <span class="text-muted">No image available</span>
                        }
                    </div>
                    <h3 class="card-title text-secondary mb-4 fw-bold fs-2">@train.Name (@train.TrainNumber)</h3>
                    <p class="text-muted fs-5">@train.Description</p>
                    <p class="fs-5"><strong>Economy Seats:</strong> @train.EconomyCapacity</p>
                    <p class="fs-5"><strong>Business Seats:</strong> @train.BusinessCapacity</p>
                    <p class="fs-5"><strong>First Class Seats:</strong> @train.FirstClassCapacity</p>
                }

                <div class="d-flex gap-3 mb-4">
                    <a href="@Url.Action("ViewTrains", "User")" class="btn btn-outline-secondary btn-lg custom-btn">Back to Trains</a>
                </div>

                <h4 class="text-secondary mb-3 fw-bold fs-3">Available Trips</h4>
                @if (trips != null && trips.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle table-lg">
                            <thead class="table-dark">
                                <tr>
                                    <th>Source</th>
                                    <th>Destination</th>
                                    <th>Departure Time</th>
                                    <th>Ticket Classes</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var trip in trips)
                                {
                                    <tr>
                                        <td>@trip.Source</td>
                                        <td>@trip.Destination</td>
                                        <td>@trip.DepartureTime.ToString("g")</td>
                                        <td>
                                            @foreach (var pricing in trip.Pricings)
                                            {
                                                <div>@pricing.TicketClass: ₦@pricing.Price (Available: @pricing.AvailableSeats)</div>
                                            }
                                        </td>
                                        <td>@(trip.IsExpired || trip.DepartureTime <= DateTime.UtcNow ? "Expired" : "Active")</td>
                                        <td>
                                            @if (!trip.IsExpired && trip.DepartureTime > DateTime.UtcNow)
                                            {
                                                <a href="@Url.Action("BookTrip", "User", new { tripId = trip.Id })" class="btn btn-primary btn-sm custom-btn">Book Now</a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Booking Closed</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <p class="text-muted mt-3 fs-5">Total Trips: @trips.Count</p>
                }
                else
                {
                    <p class="text-muted fs-5">No trips available for this train.</p>
                }
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .custom-btn {
            transition: all 0.3s ease;
            border-radius: 8px;
            font-weight: bold;
        }

        .custom-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .large-card {
            border-radius: 12px;
            transition: all 0.3s ease;
            min-height: 300px;
        }

        .large-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .table-dark {
            background-color: #343a40;
            color: white;
        }

        .text-primary {
            color: #007bff !important;
            font-weight: bold;
        }

        .text-secondary {
            color: #6c757d !important;
            font-weight: bold;
        }
    </style>
}